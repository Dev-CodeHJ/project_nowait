<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ezen.nowait.order.mapper.OrderMapper">

	<!-- 주문조회 리스트 -->
	<select id="getOrderList" resultType="ezen.nowait.order.domain.OrderVO">
		SELECT
		*
		FROM `order`
		WHERE user_id=#{userId}
	</select>

	<select id="getOrderDetailList" resultType="ezen.nowait.order.domain.OrderVO">
		SELECT
		*
		FROM `order`
		WHERE user_id=#{userId}
	</select>

	<insert id="orderInsert">
	INSERT INTO order 
	VALUES (#{order_num}, #{user_id}, #{cr_num},  #{pay_method}, #{reserv_num}, #{reserv_time}, 
	#{order_time}, #{total_price}, #{request_msg})
	</insert>

</mapper>