<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	<mapper namespace="ezen.nowait.board.mapper.ReviewMapper">
									 
	<select id="getList" resultType="ezen.nowait.board.domain.ReviewVO">
		select * from review where user_id = #{userId}
	</select>
	
	<insert id="insertReview">
		insert into review(user_id,review_content,review_img)
		values(#{userId}, #{reviewContent}, #{reviewImg})
	</insert>
	
	<select id="getReview" resultType="ezen.nowait.board.domain.ReviewVO">
		select * from review where review_num=#{reviewNum}
	</select>
	
	<delete id="deleteReview">
		delete from review where review_num=#{reviewNum}
	</delete>
	
	<update id="updateReview">
		update review
		set review_content = #{reviewContent},
			review_updatedate = sysdate()
			where review_num = #{reviewNum}
	</update>
	
	<select id="getListWithPaging"	resultType="ezen.nowait.board.domain.ReviewVO">
		
		select * from review
		where review_num=#{reviewNum}
		
	</select>
	
	</mapper>